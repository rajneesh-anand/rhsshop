{
  "name": "@onlineshop/api",
  "version": "0.0.1",
  "scripts": {
    "dev": "ts-node-dev --respawn src/admin_server.ts",
    "build": "rimraf dist && mkdir dist && tsc -b && copyfiles -u 1 src/ dist/",
    "shop": "cross-env NODE_ENV=production node dist/src/admin_server.js",
    "pg:create": "ts-node ./node_modules/typeorm/cli.js -f ormconfig.json  -d src/migrations migration:generate -n",
    "pg:run": "ts-node ./node_modules/typeorm/cli.js migration:run"
  },
  "dependencies": {
    "apollo-server-express": "^2.14.0",
    "argon2": "^0.27.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "fuse.js": "6.0.0",
    "graphql": "^15.0.0",
    "graphql-tools": "^6.0.3",
    "ioredis": "^4.19.2",
    "lodash": "^4.17.15",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0-rc.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/connect-redis": "0.0.14",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.3",
    "@types/express-session": "^1.17.0",
    "@types/graphql": "^14.5.0",
    "@types/ioredis": "^4.17.7",
    "@types/lodash": "^4.14.153",
    "@types/node": "^14.0.5",
    "@types/redis": "^2.8.28",
    "@types/uuid": "^8.3.0",
    "copyfiles": "^2.3.0",
    "nodemon": "^2.0.6",
    "ts-node": "^8.8.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.3"
  },
  "license": "ISC"
}
